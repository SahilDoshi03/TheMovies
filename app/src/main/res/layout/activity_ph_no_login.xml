<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhNoLogin"
    android:background="@color/pale_black">

    <TextView
        android:id="@+id/tvPhLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="80sp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPhNoPrefix"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:inputType="textPersonName"
        android:text="@string/_91"
        android:hint="@string/international_prefix"
        android:textColorHint="@color/pale_black"
        android:textColor="@color/pale_black"
        android:textAlignment="center"
        android:background="@color/white"
        android:autofillHints="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhLogin" />

    <EditText
        android:id="@+id/etPhNo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:autofillHints="phone"
        android:hint="@string/phone_number"
        android:textAlignment="center"
        android:textColorHint="@color/pale_black"
        android:inputType="phone"
        android:textColor="@color/pale_black"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/etPhNoPrefix"
        app:layout_constraintTop_toBottomOf="@+id/tvPhLogin"/>

    <Button
        android:id="@+id/loginPhBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:backgroundTint="#535050"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPhNoPrefix"/>

    <TextView
        android:id="@+id/tvVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:text="@string/verify_mobile"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPhBtn" />

    <EditText
        android:id="@+id/etOTP"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="@color/pale_black"
        android:textColorHint="@color/pale_black"
        android:textAlignment="center"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVerify"
        android:autofillHints="phone"
        android:hint="@string/otp"/>

    <Button
        android:id="@+id/verifyPhBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:text="@string/verify"
        android:textColor="@color/white"
        android:backgroundTint="#535050"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOTP" />

</androidx.constraintlayout.widget.ConstraintLayout>